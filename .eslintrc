{
  "plugins":[
    "babel",
    "react",
    "es-beautifier"
  ],
  "extends": [
    "airbnb",
    "plugin:es-beautifier/standard"
  ],
  "env": {
    "mocha": true
  },
  "globals": {
    "chai": true,
    "expect": true,
    "sinon": true,
    "jest": true
  },
  "rules": {
    "radix": 0,
    "es-beautifier/multiline-array-elements": 0,
    "no-unused-expressions": 0,
    "react/no-unescaped-entities": 0,
    "react/jsx-filename-extension": 0,
    "react/jsx-curly-spacing": 0,
    "import/no-extraneous-dependencies": 0,
    "global-require": 0,
    "no-trailing-spaces": ["error", { "skipBlankLines": true }],
    "max-len": ["error", 121],
    "arrow-parens": 0,
    "template-curly-spacing": 0,
    "no-confusing-arrow": 0,
    "es-beautifier/jsx-multiline-elements": 0,
    "import/prefer-default-export": 0,
    "react/forbid-prop-types": 0,
    "class-methods-use-this": 0,
    "es-beautifier/jsx-separateline-literals": 0,
    "es-beautifier/jsx-multiline-attributes": 0,
    "react/jsx-first-prop-new-line": 0,
    "es-beautifier/multiline-object-properties": 0
  }
}